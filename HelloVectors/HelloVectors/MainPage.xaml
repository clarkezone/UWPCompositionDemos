<Page
    x:Class="HelloVectors.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HelloVectors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Button Click="SimpleShapeImperative_Click">Simple Shape Imperative</Button>
            <Button Click="SimplePathImperative_Click">Simple Path Imperative</Button>
            <Button Click="PathMorphImperative_Click">Path Morph Imperative</Button>
            <Button Click="BodyMovinImperative_Click">Animation from After Effects</Button>
        </StackPanel>
        <Rectangle
            x:Name="VectorHost"
            Width="400"
            Height="400"
            Fill="LightGray" />
    </Grid>
</Page>
